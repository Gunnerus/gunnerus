[Unit]
Description=Service for the Reserver app

[Service]
Restart=always
ExecStart=/bin/sh --init-file <(echo ". \"$HOME/.bashrc\"; screen -S reserver; source /home/space/gunnerus/env/bin/activate; python /home/space/gunnerus/gunnerus/manage.py runserver 0.0.0.0:8000")

[Install]
WantedBy=multi-user.target
